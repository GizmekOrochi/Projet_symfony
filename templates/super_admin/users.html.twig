{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

    <table border="1" cellspacing="0" cellpadding="5">
        <thead>
        <tr>
            <th>ID</th>
            <th>Login</th>
            <th>Nom</th>
            <th>Rôles</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.login }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>
                    <!-- Lien pour promouvoir l'utilisateur en Admin -->
                    <a href="{{ path('super_admin_promote_user', {'id': user.id}) }}">Promouvoir Admin</a> |
                    <!-- Lien pour rétrograder l'utilisateur (retirer le rôle Admin) -->
                    <a href="{{ path('super_admin_demote_user', {'id': user.id}) }}">Rétrograder</a> |
                    <!-- Lien pour supprimer l'utilisateur avec confirmation -->
                    <a href="{{ path('super_admin_delete_user', {'id': user.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun utilisateur trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
